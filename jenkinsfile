pipeline {
  agent any

  environment {
    DOCKER_IMAGE = "balajithakor39/image-to-text-ai"
  }

  stages {

    stage('Checkout') {
      steps {
        git 'https://github.com/<username>/enterprise-ai-cicd-platform.git'
      }
    }

    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }

    stage('SonarQube') {
      steps {
        sh 'mvn sonar:sonar'
      }
    }

    stage('Docker Build') {
      steps {
        sh 'docker build -t $DOCKER_IMAGE:latest .'
      }
    }

    stage('Docker Push') {
      steps {
        sh '''
        docker login -u $DOCKER_USER -p $DOCKER_PASS
        docker push $DOCKER_IMAGE:latest
        '''
      }
    }

    stage('Deploy') {
      steps {
        sh 'bash scripts/deploy.sh'
      }
    }
  }
}
